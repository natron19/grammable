<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 card form">
  <h1>Edit Gram</h1>

  <%= simple_form_for @gram do |f| %>
    <%= f.input :message %>
    <%= f.file_field :picture, :label => "Upload an picture" %>
    <%= f.submit "Update", class: "my-btn"  %>
  <% end %>


  <br />
  <hr />
  <%= link_to "Delete Post", gram_path(@gram), method: :delete, data: {confirm: "Are your sure?" }, class: "btn btn-danger" %>

</div>
